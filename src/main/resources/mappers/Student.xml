<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.web.study.repository.StudentRespository">
	
	<insert id="saveStudent" parameterType="S1">
		insert into student_mst
		values (0, #{name}, #{birth_date})	
	</insert>
	
	<select id="findById" parameterType="Integer" resultType="S1">
		select
			id,
			name,
			birth_date
		from
			student_mst
		where
			id = #{id}
	</select>
	
</mapper>